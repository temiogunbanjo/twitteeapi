{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Twittee API",
    "description": "Test Api document",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "General APIs",
      "description": "API for creating, editing, listing and deleting user records"
    },
    {
      "name": "User Authentication",
      "description": "API for creating, editing, listing and deleting user records"
    },
    {
      "name": "User Account",
      "description": "API for creating, editing, listing and deleting user records"
    },
    {
      "name": "Twits",
      "description": "API for creating, editing, listing and deleting user records"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/health-check": {
      "get": {
        "summary": "Gets status of server",
        "tags": ["General APIs"],
        "responses": {
          "200": {
            "description": "Server is running"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "summary": "Create a new user/player",
        "tags": ["User Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that will be supplied",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User login endpoint",
        "tags": ["User Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that will be supplied",
            "required": true,
            "schema": {
              "required": ["email", "password"],
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/auth/validate-token": {
      "get": {
        "summary": "user jwt token validation endpoint",
        "tags": ["General APIs"],
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "description": "token string to validate",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/user/{userId}": {
      "post": {
        "summary": "Gets a single user",
        "tags": ["User Account"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "description": "Request object that will be supplied",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Verified successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/user/list-users": {
      "get": {
        "summary": "Get a list of all users. Can apply filters to results",
        "tags": ["User Account"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "pagination parameter",
            "required": false
          },
          {
            "in": "query",
            "name": "limit",
            "description": "number of results displayed per page",
            "required": false
          },
          {
            "in": "query",
            "name": "search",
            "description": "search player's (userId, name, username)",
            "required": false
          },
          {
            "in": "query",
            "name": "status",
            "description": "status parameter",
            "required": false
          },
          {
            "in": "query",
            "name": "role",
            "description": "filter results by user roles.",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/user/send-verification-email": {
      "post": {
        "summary": "Send email verification to user",
        "tags": ["User Account"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Request object that will be supplied",
            "required": true,
            "schema": {
              "required": ["userId"],
              "properties": {
                "userId": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email sent successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/user/verify-email": {
      "get": {
        "summary": "Marks a users email as verified when called",
        "tags": ["User Account"],
        "parameters": [
          {
            "in": "query",
            "name": "userId",
            "description": "Unique user uuid string",
            "required": true
          },
          {
            "in": "query",
            "name": "verificationCode",
            "description": "Automatically generated verification code string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Verified successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/user/{userId}/update-profile": {
      "put": {
        "summary": "Update user profile details",
        "tags": ["User Account"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "description": "Unique user uuid string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "properties": {
                "phone": {
                  "type": "string"
                },
                "firstname": {
                  "type": "string"
                },
                "lastname": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/create-twit": {
      "post": {
        "summary": "Create a new twit",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "description": "Token authorization to pass with the request",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "required": ["image", "userId", "caption"],
              "properties": {
                "image": {
                  "type": "string"
                },
                "caption": {
                  "type": "string"
                },
                "userId": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/{postId}": {
      "post": {
        "summary": "Fetch a single twit",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "path",
            "name": "postId",
            "description": "post uuid of the twit to fetch",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "properties": {
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Fetched Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/list-twits": {
      "get": {
        "summary": "Get a list of all posts. Can also be flitered",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "pagination parameter",
            "required": false
          },
          {
            "in": "query",
            "name": "limit",
            "description": "number of results displayed per page",
            "required": false
          },
          {
            "in": "query",
            "name": "search",
            "description": "search with transaction's (userId, transactionId)",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Created Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/{postId}/like": {
      "post": {
        "summary": "Likes a single twit",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "description": "Token authorization to pass with the request",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "postId",
            "description": "uuid of the post/twit",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "required": ["state"],
              "properties": {
                "state": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/{postId}/delete-twit": {
      "delete": {
        "summary": "Delete a single twit",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "description": "Token authorization to pass with the request",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "required": ["postId"],
              "properties": {
                "postId": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    },
    "/twits/delete-twit": {
      "delete": {
        "summary": "Delete a single twit",
        "tags": ["Twits"],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "description": "Token authorization to pass with the request",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Request object with fields to be updated",
            "required": true,
            "schema": {
              "required": ["postId"],
              "properties": {
                "postId": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted Successfully"
          },
          "500": {
            "description": "Error that may occur due to server error"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["email", "password", "confirmPassword"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        }
      }
    }
  }
}
